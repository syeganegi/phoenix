@model Phoenix.PhoenixApp.Presentation.MVC.Models.ProfileModule.AboutModel

@using (Ajax.BeginForm(MVCT.Edit.About(), new AjaxOptions
       {
           UpdateTargetId = "about-view",
           InsertionMode = InsertionMode.Replace,
           OnSuccess = "aboutEditClose",
           OnFailure = "onAjaxFormFaliure",
           HttpMethod = "Post"
       },
       new { id = "about-form-submit" }))
{
    @Html.ValidationSummary(true)
    <table>
        <tr>
            <td class="editor-field">
                @Html.TextAreaFor(model => model.About, new { @id = "about-texteditor" })
                @Html.ValidationMessageFor(model => model.About)
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 10px;"></td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" /></td>
        </tr>
    </table>
}
