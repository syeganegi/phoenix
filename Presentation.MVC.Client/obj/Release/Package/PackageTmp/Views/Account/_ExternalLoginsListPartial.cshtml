@model ICollection<AuthenticationClientData>

@if (this.Model.Count == 0)
{
    <div class="message-info">
        <p>There are no external authentication services configured. See <a href="http://go.microsoft.com/fwlink/?LinkId=252166">this article</a>
            for details on setting up this ASP.NET application to support logging in via external services.</p>
    </div>
}
else
{
    using (this.Html.BeginForm("ExternalLogin", "Account", new { this.ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        foreach (AuthenticationClientData p in this.Model)
        {
            @*<button type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account" style="font-size: 16px;" class="loginBox_SignUp">@p.DisplayName</button>*@
     <button type="submit" class="fb-button"   name="provider" value="@p.AuthenticationClient.ProviderName"  ><img src="../../Content/Images/Facebook_LoginWith.png" alt="" /></button>
        }
    }
}