@model Phoenix.PhoenixApp.Presentation.MVC.Models.Account.LocalPasswordModel

<div style="height: 10px;"></div>
<h2>Change password</h2>

@using (this.Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <table>
        <tr>
            <td class="editor-label">
                  @Html.LabelFor(m => m.OldPassword)
            </td>
            <td class="editor-field">
                
                @Html.PasswordFor(m => m.OldPassword, new { @class = "text-box"})
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                   @Html.LabelFor(m => m.NewPassword)
            </td>
            <td class="editor-field">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "text-box"})
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </td>
            <td class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-box"})
            </td>
        </tr>
         <tr>
            <td colspan="2" style="height: 15px;"></td>
        </tr>
        <tr>
            <td></td>
            <td>
                 <input type="submit" value="Change password" />
            </td>
        </tr>
</table>
   
}