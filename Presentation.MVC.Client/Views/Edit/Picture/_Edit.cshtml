    @Html.ValidationSummary(true)
    <label for="file">Upload New Picture:</label>
    <input type="file" name="file" id="file" />
    <p><sup>Recommended size is 180 x 180 pixels</sup></p>
    <br/>
    <input type="submit" value="Save" />
}
        </td>
    </tr>
</table>