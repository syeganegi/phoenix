



<table>
    <tr>
        <td>
            <img src="@Url.Action(MVCT.Profile.Picture(User.Identity.Name))" style="width: 180px; vertical-align:middle"  />  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;          
        </td>
        <td>
            @using (Html.BeginForm(MVCT.Edit.Picture(), FormMethod.Post, new { enctype = "multipart/form-data" }))
